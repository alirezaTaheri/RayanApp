<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/grey_dark_4"/>
            <corners android:bottomRightRadius="40dp" android:bottomLeftRadius="40dp"
                android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape></item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:startColor="@color/grey_dark_3"
                android:centerColor="@color/grey_dark_3"
                android:endColor="@color/grey_dark_3"
                />
            <corners android:bottomRightRadius="40dp" android:bottomLeftRadius="40dp"
                android:topLeftRadius="0dp" android:topRightRadius="0dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>