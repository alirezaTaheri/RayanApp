<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
<shape>
    <solid android:color="@color/grey_dark_4"/>
    <corners android:bottomRightRadius="50dp" android:bottomLeftRadius="50dp"
        android:topLeftRadius="50dp" android:topRightRadius="50dp"/>
    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
    <stroke android:color="@color/white" android:width="0.4dp"/>
</shape></item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey"/>
            <corners android:bottomRightRadius="50dp" android:bottomLeftRadius="50dp"
                android:topLeftRadius="50dp" android:topRightRadius="50dp"/>
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
            <stroke android:color="@color/white" android:width="0.8dp"/>
        </shape>
    </item>
</selector>