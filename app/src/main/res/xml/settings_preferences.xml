<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="تنظیمات نوتیفیکیشن"
        android:textColor="@color/baseColor"
        android:layout="@layout/setting_preferences_category_text"
        android:key="SET_NOTIFICATION">

        <CheckBoxPreference
            android:key="KEY_NOTIFICATION"
            android:textColor="@color/baseColor"
            android:summary="فعال و غیر فعال کردن دریافت نوتیفیکیشن"
            android:title="دریافت نوتیفیکیشن"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="تنظیمات تم برنامه"
        android:textColor="@color/baseColor"
        android:layout="@layout/setting_preferences_category_text"
        android:key="CHOOSE_THEME">

        <ListPreference
            android:key="KEY_THEME"
            android:title="انتخاب تم"
            android:summary="تم مورد نظر خود را انتخاب کنید"
            android:entries="@array/choose_theme_setting"
            android:entryValues="@array/choose_theme_setting_values"
            android:defaultValue="تم 1"
            android:dependency="CHOOSE_THEME"/>

    </PreferenceCategory>


</PreferenceScreen>