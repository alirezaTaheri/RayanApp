<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NewDeviceSetConfigurationFragment">
<LinearLayout
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/name"
        android:inputType="text"
        android:maxLength="15"
        android:imeOptions="actionDone"
        android:hint="نام دستگاه"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:text="انتخاب گروه"
        android:drawableRight="@drawable/ic_group"
        android:id="@+id/changeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:drawableRight="@drawable/ic_wifi"
        android:gravity="center"
        android:text="انتخاب مودم و رمز عبور"
        android:id="@+id/changeAccessPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</FrameLayout>