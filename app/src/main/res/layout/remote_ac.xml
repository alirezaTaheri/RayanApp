<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppBaseThemeDarkStatusBar"
    android:background="@color/ms_black">

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/tempDown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/background_remote_rounded_button_"
        app:layout_constraintBottom_toBottomOf="@+id/temp"
        app:layout_constraintEnd_toStartOf="@+id/temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/temp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_minus" />

    <TextView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="17"
        android:textColor="@color/amber"
        android:textSize="98sp"
        app:layout_constraintEnd_toStartOf="@+id/tempUp"
        app:layout_constraintStart_toEndOf="@+id/tempDown"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/tempUp"
        android:padding="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_remote_rounded_button_"
        app:layout_constraintBottom_toBottomOf="@+id/temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/temp"
        app:layout_constraintTop_toTopOf="@+id/temp"
        app:srcCompat="@drawable/ic_add" />


    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/power"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/button_backgrand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="13dp"
        app:layout_constraintWidth_percent="0.8"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_power" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/mode"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_remote_rounded_button_"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@id/airVolume"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_ice" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        android:text="Mode"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/power"
        app:layout_constraintEnd_toEndOf="@+id/mode"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="@+id/mode" />

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/airVolume"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="20dp"
        android:background="@drawable/background_remote_rounded_button_"
        app:layout_constraintBottom_toBottomOf="@+id/mode"
        app:layout_constraintEnd_toStartOf="@+id/more"
        app:layout_constraintStart_toEndOf="@+id/mode"
        app:layout_constraintTop_toTopOf="@+id/mode"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_fan" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="Air Volume"
        app:layout_constraintEnd_toEndOf="@+id/airVolume"
        app:layout_constraintStart_toStartOf="@+id/airVolume"
        app:layout_constraintTop_toTopOf="@id/textView2"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"/>

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/more"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="20dp"
        android:background="@drawable/background_remote_rounded_button_"
        app:layout_constraintBottom_toBottomOf="@+id/airVolume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/airVolume"
        app:layout_constraintTop_toTopOf="@+id/airVolume"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_more_" />

    <TextView
        android:textColor="@color/white"
        android:textSize="13sp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="بیشتر"
        app:layout_constraintEnd_toEndOf="@+id/more"
        app:layout_constraintStart_toStartOf="@+id/more"
        app:layout_constraintTop_toTopOf="@id/textView2"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"/>

</android.support.constraint.ConstraintLayout>