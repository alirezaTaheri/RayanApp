<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_height="100dp"
    android:theme="@style/AppTheme.NoActionBarListItems"
    app:cardCornerRadius="7dp">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/background_device"
            android:id="@+id/clickableLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100dp">

            <RelativeLayout
                android:clickable="false"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:clickable="false"
                    android:focusable="false"
                    android:padding="3dp"
                    android:layout_height="50dp"
                    android:id="@+id/pin1"
                    android:layout_width="match_parent"
                    android:foregroundGravity="top"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_lamp_off"
                    />

            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey_light_3"
            />
        <View
            android:id="@+id/bottomStrip"
            android:background="@color/baseColor2"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />

        <TextView
            android:layout_gravity="center_horizontal|bottom"
            android:text="Name"
            android:clickable="false"
            android:focusable="false"
            android:background="#00ffffff"
            android:id="@+id/name"
            android:gravity="center"
            android:textColor="@color/ms_black"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="1.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</androidx.cardview.widget.CardView>
