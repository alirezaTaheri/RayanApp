<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_light_4"
    tools:context=".Activities.LoginActivity"
    android:layoutDirection="rtl"
    android:isScrollContainer="false"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="رایان"
            android:textSize="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginSplash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="40"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_backgrand"
                    android:text="@string/text_sign_in_button"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signUpSplash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/text_sign_up_button"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_backgrand"
                    android:layout_weight="60"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
        </LinearLayout>
</RelativeLayout>