<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/custom_dialog_border"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_rayan" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/image"
        android:layout_marginTop="23dp"
        android:layout_marginRight="5dp"
        android:text="title"
        android:id="@+id/dialog_title"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:text="message"
        android:gravity="right"
        android:id="@+id/dialog_message"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/dialog_submitBtn"
        android:layout_below="@+id/dialog_message"
        android:textColor="@color/red"
        android:text="حذف بشه"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/dialog_cancelBtn"
        android:layout_below="@+id/dialog_message"
        android:layout_toRightOf="@id/dialog_submitBtn"
        android:textColor="@color/blue"
        android:text="بی\u200cخیال"
        android:paddingBottom="10dp"/>
</RelativeLayout>