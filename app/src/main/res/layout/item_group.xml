<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_item_layout"
        >
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        card_view:cardCornerRadius="22dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_rayan"
            android:background="#000000"/>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/gr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/card"
        app:srcCompat="@drawable/ic_group_filled"
        />

                <TextView
                    android:text="Name"
                    android:id="@+id/name"
                    android:layout_toLeftOf="@id/gr"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"
                    android:textColor="@color/ms_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="0.3dp"
        android:layout_marginRight="53dp"
        android:padding="1dp"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
