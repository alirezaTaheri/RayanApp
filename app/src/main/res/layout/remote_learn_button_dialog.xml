<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/background_progress_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/background_confirm_button_learn"
            android:id="@+id/confirm"
            android:visibility="gone"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cancel"
            android:text="تایید"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@drawable/background_cancel_button_learn"
            android:id="@+id/cancel"
            android:layout_margin="10dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/confirm"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="لغو"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>