<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_height="50dp"
    app:cardCornerRadius="7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/deviceImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_rayan"
           />
    <TextView
        android:id="@+id/name"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressBar"
        android:layout_toLeftOf="@id/deviceImage"
        android:layout_marginRight="15dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.varunest.sparkbutton.SparkButton
        android:layout_marginLeft="15dp"
        android:id="@+id/favoriteIcon"
        app:sparkbutton_activeImage="@drawable/ic_star_full"
        app:sparkbutton_inActiveImage="@drawable/ic_star_empty"
        app:sparkbutton_iconSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        app:sparkbutton_primaryColor="@color/baseColor"
        app:sparkbutton_secondaryColor="@color/primary_dark2"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
